{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "run:johnny": "cd packages/johnny-mh.github.io && yarn develop",
    "build:johnny": "cd packages/johnny-mh.github.io && yarn build",
    "clean:johnny": "cd packages/johnny-mh.github.io && gatsby clean",
    "run:mnkim": "cd packages/mnkim.com && yarn develop",
    "build:mnkim": "cd packages/mnkim.com && yarn build",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\""
  },
  "dependencies": {},
  "devDependencies": {
    "eslint": "^7.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react": "^7.20.0",
    "import-sort-style-module": "^6.0.0",
    "lerna": "^3.21.0",
    "prettier": "^2.0.5",
    "prettier-plugin-import-sort": "^0.0.4"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module"
    }
  }
}
